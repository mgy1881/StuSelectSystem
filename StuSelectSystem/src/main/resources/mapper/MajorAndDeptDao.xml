<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.web.dao.MajorAndDeptDao">

    <select id="selectMajorList" resultType="com.web.pojo.Major">
        select * from major_table
        <where>
            <if test="id != null">
                id = #{id}
            </if>
        </where>
    </select>
    <select id="selectDeptList" resultType="com.web.pojo.Dept">
        select * from dept_table
        <where>
            <if test="id != null">
                id = #{id}
            </if>
        </where>
    </select>
</mapper>